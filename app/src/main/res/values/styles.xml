<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
        <item name="android:colorEdgeEffect">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyToolbar">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">42sp</item>
        <item name="fontFamily">@font/fty_delirium_neon_ncv</item>
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorControlHighlight">?attr/colorAccent</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <!-- Apply attributes here -->
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="ModalBottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">@color/white</item>
    </style>


    <style name="BottomDialogCardAppShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/screen_radius</item>
        <item name="cornerSizeTopRight">@dimen/screen_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyHeaderText">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.125</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">42sp</item>
        <item name="fontFamily">@font/fty_delirium_neon_ncv</item>
    </style>

    <style name="FilterHeaderText" parent="MyHeaderText">
        <item name="fontFamily">@font/fty_delirium_ncv</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="SearchTextAppearance">
        <item name="fontFamily">@font/jesa_script_regular</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TabTextAppearance">
        <item name="fontFamily">@font/fty_delirium_ncv</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="SettingsRadioButtonTextAppearance">
        <item name="fontFamily">@font/jesa_script_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BlackAndWhiteTab" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">@color/tile_text_color</item>
    </style>

    <style name="BottomSheetTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/fty_delirium_ncv</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">26sp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="strokeColor">?attr/colorAccent</item>
    </style>

    <style name="ActiveFilterBadge" >
        <item name="cardCornerRadius">13dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="fontFamily">@font/fty_delirium_ncv</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="SettingsItemSubtitle">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="fontFamily">@font/jesa_script_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomDialogCard">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ErrorTitleTextView" parent="Widget.MaterialComponents.TextView" >
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">52sp</item>
        <item name="fontFamily">@font/fty_delirium_ncv</item>
    </style>

</resources>
