    <style name="TabTextAppearance">
        <item name="fontFamily">@font/fty_delirium_ncv</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="BlackAndWhiteTab" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">@color/tile_text_color</item>
    </style>

    <style name="MockText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListItem" parent="MockText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">4dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">30</item>
    </style>

