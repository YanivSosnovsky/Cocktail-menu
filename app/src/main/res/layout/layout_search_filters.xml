<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filter_accept_btn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0.125"
        android:padding="0dp"
        app:rippleColor="@color/secondary_text_color"
        android:text="apply"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:backgroundTint="@color/black"
        app:cornerRadius="0dp"
        app:fontFamily="@font/fty_delirium_ncv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_container" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/MyHeaderText"
        android:id="@+id/filters_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/screen_padding"
        android:text="Filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/filter_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/filter_accept_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="450dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/alcoholic_header_tv"
                style="@style/FilterHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alcoholic"
                app:fontFamily="@font/fty_delirium_ncv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filter_alcoholic_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_padding"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/list_item_selectable_filter" />

            <View
                android:id="@+id/glasses_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/filter_divider_margin"
                android:layout_marginBottom="@dimen/filter_divider_margin"
                android:background="@drawable/divider" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/glasses_header_tv"
                style="@style/FilterHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glasses"
                app:fontFamily="@font/fty_delirium_ncv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filter_glasses_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_padding"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/list_item_selectable_filter" />

            <View
                android:id="@+id/category_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/filter_divider_margin"
                android:layout_marginBottom="@dimen/filter_divider_margin"
                android:background="@drawable/divider" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/category_header_tv"
                style="@style/FilterHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                app:fontFamily="@font/fty_delirium_ncv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filter_category_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_padding"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/list_item_selectable_filter" />

            <View
                android:id="@+id/ingredients_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/filter_divider_margin"
                android:layout_marginBottom="@dimen/filter_divider_margin"
                android:background="@drawable/divider" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/ingredient_header_tv"
                style="@style/FilterHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                app:fontFamily="@font/fty_delirium_ncv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filter_ingredients_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_padding"
                android:layout_marginBottom="@dimen/filter_divider_margin"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="5"
                tools:listitem="@layout/list_item_selectable_filter" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>