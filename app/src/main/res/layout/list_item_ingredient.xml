<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/screen_padding"
    android:paddingBottom="@dimen/screen_padding"
    android:background="?selectableItemBackground"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ingredient_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:letterSpacing="0.2"
        android:textColor="@color/header_text_color"
        android:textSize="18sp"
        app:fontFamily="@font/jesa_script_regular"
        app:layout_constraintBottom_toTopOf="@id/ingredient_quantity_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Vodka" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ingredient_quantity_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:textColor="@color/secondary_text_color"
        android:textSize="18sp"
        app:fontFamily="@font/jesa_script_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ingredient_name_tv"
        app:layout_constraintStart_toStartOf="@id/ingredient_name_tv"
        app:layout_constraintTop_toBottomOf="@id/ingredient_name_tv"
        tools:text="1 shot" />

</androidx.constraintlayout.widget.ConstraintLayout>