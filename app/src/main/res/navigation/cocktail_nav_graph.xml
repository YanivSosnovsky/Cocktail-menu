<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cocktail_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/drinkFragment"
        android:name="com.zemingo.drinksmenu.ui.fragments.DrinkFragment"
        android:label="DrinkFragment"
        tools:layout="@layout/fragment_drink">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zemingo.drinksmenu.ui.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_drinkFragment"
            app:destination="@id/drinkFragment"
            app:enterAnim="@anim/fragment_close_enter" />
        <action
            android:id="@+id/action_homeFragment_to_advancedSearchFragment"
            app:destination="@id/advancedSearchFragment"
            app:enterAnim="@anim/fragment_close_enter" />
    </fragment>

    <fragment
        android:id="@+id/advancedSearchFragment"
        android:name="com.zemingo.drinksmenu.ui.fragments.AdvancedSearchFragment"
        android:label="AdvancedSearchFragment"
        tools:layout="@layout/fragment_advanced_search">
        <action
            android:id="@+id/action_advancedSearchFragment_to_drinkFragment"
            app:destination="@id/drinkFragment"
            app:enterAnim="@anim/fragment_close_enter" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.zemingo.drinksmenu.ui.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:launchSingleTop="true" />
    </fragment>


</navigation>